<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "https://puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
  <!--  Entity classes need to be extended by reflection. -->
  <!--  Entity classes have magic numbers for field sizes. -->
  <suppress checks="DesignForExtension|MagicNumber"
            files="au[\\/]org[\\/]ands[\\/]vocabs[\\/]toolkit[\\/]db[\\/]model[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]db[\\/]entity[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]roles[\\/]db[\\/]entity[\\/].*java"
            />

  <!-- package-info.java may be in src/main, even though missing
       in src/test -->
  <suppress checks="JavadocPackage"
            files="src/test"
            />

  <!-- Code generated by xjc. We haven't tried very hard to "fix" the
       generated code, apart from the VisibilityModifer violations.
  -->
  <suppress checks="DesignForExtension|FinalParameters|JavadocMethod|JavadocVariable|JavadocStyle|LeftCurly|LineLength"
            files="au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]schema[\\/]vocabulary201701[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]db[\\/]internal[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]enums[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]utils[\\/]language[\\/]lsr[\\/].*java"
            />
  <!-- xjc does not generate a package-info.java file for
       au.org.ands.vocabs.registry.enums. We have a manually-created
       one in src/main/java, but Checkstyle doesn't look for it there.
       Similarly, we have a hand-crafted package-info.java for
       the two packages generated for the Registry database.
  -->
  <suppress checks="JavadocPackage"
            files="au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]enums[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]db[\\/]dao[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]db[\\/]entity[\\/].*java|au[\\/]org[\\/]ands[\\/]vocabs[\\/]registry[\\/]utils[\\/]language[\\/]lsr[\\/].*java"
            />

</suppressions>
